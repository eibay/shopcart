<p id="notice"><%= notice %></p>

<h4>Products</h4>

<div class="row">
  <h5>Shopping Items</h5>
  <table class="bordered highlight centered sortable">
    <thead>
      <tr>
        <th>Item Name</th>
        <th>Price</th>
        <th>Offer</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each_with_index do |product, index|  %>
      <tr class="products-row" id=<%= "#{index}" %>>
        <td><%= product.name %></td>
        <td><%= product.unit_price %></td>
        <% if product.special_qty %>
          <td><%= "#{product.special_qty} for #{product.special_price}" %></td>
        <% else %>
          <td>-</td>
        <% end %>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
    <script>
      selectProduct();
    </script>
  </table>
</div>

<%= link_to 'New Product', new_product_path, class: "btn waves-effect waves-light" %>