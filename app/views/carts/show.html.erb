
<div class="container">
  <p id="notice"><%= notice %></p>  
  <h4>Cart</h4>
    <div>
      <table class="bordered highlight centered sortable">
      <thead>
        <tr>
          <th>Item Name</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Offers</th>
          <th>Total Price</th>
        </tr>
      </thead>
      <tbody>
      <% @cart.line_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.product.unit_price %></td>
          <td><%= item.quantity %></td>
          <% if item.product.special_qty %>
            <td><%= "#{item.product.special_qty} for #{item.product.special_price}" %></td>
          <% else %>
            <td>-</td>
          <% end %>
          <td><%= item.total_price %></td>
        </tr>
      <% end %>
      </tbody>
    </div>
    <div>
      <%= button_to 'Empty Cart', @cart, method: :delete, data:{confirm: 'Are you sure?'}, class:"btn waves-light waves-effects" %>
      <%= link_to 'Continue Shopping', products_path, class:"btn waves-effects waves-light" %>
    </div>
    <div>
      <h5> Grand Total: <%= number_to_currency(@cart.grand_total) %></h5>
    </div>
</div>