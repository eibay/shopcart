
<div class="container">
  <p id="notice"><%= notice %></p>  
  <h4>Cart</h4>
    <table class="bordered highlight centered sortable">
    <thead>
      <tr>
        <th>Item Name</th>
        <th>Price</th>
        <th>Offers</th>
      </tr>
    </thead>
    <tbody>
    <% @cart.line_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.product.unit_price %></td>
        <% if item.product.special_qty %>
          <td><%= "#{item.product.special_qty} for #{item.product.special_price}" %></td>
        <% else %>
          <td>-</td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
</div>